<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- guest -->
<mapper namespace="com.duying.dao2.GuestDao2">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="guestMap" type="Guest">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="role" property="role" jdbcType="VARCHAR" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->

    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        g.id, g.name, g.role
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->

    <!-- 查询所有 -->
    <select id="findGuestAll" resultMap="guestMap">
        SELECT
            <include refid="allColumns" />
        FROM guest g
    </select>

    <!-- 根据条件参数查询列表 -->
    <select id="findGuestByCondition" resultMap="guestMap" parameterType="map">
        SELECT
            <include refid="allColumns" />
        FROM guest g WHERE 1 = 1
        <if test="name != null and name != ''">
            AND g.name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="role != null and role != ''">
            AND g.role LIKE CONCAT('%', #{role}, '%')
        </if>
    </select>

    <!-- 根据主键查询信息 -->
    <select id="findGuestByIds" resultMap="guestMap" parameterType="list">
        SELECT
            <include refid="allColumns" />
        FROM guest g WHERE g.id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 新增信息 -->
    <insert id="addGuest">
        INSERT INTO guest (
            id, name, role
        ) VALUES (
            #{id},
            #{name},
            #{role}
        )
    </insert>

    <!-- 批量新增信息 -->
    <insert id="addGuests" parameterType="list">
        INSERT INTO guest (
            id, name, role
        ) VALUES
        <foreach collection="list" index="index" item="item" separator=",">
            (
                #{item.id},
                #{item.name},
                #{item.role}
            )
        </foreach>
    </insert>

    <!-- 修改信息 -->
    <update id="updateGuest">
        UPDATE guest
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="role != null">
                role = #{role}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 批量修改信息 -->
    <update id="updateGuests" parameterType="list">
        <foreach collection="list" index="index" item="item" separator=";">
            UPDATE guest
            <set>
                <if test="item.name != null">
                    name = #{item.name},
                </if>
                <if test="item.role != null">
                    role = #{item.role}
                </if>
            </set>
            WHERE id = #{item.id}
        </foreach>
    </update>

    <!-- 根据主键删除 -->
    <delete id="deleteGuestById" parameterType="int">
        DELETE FROM guest WHERE id = #{id}
    </delete>

    <!-- 根据主键批量删除 -->
    <delete id="deleteGuestByIds" parameterType="list">
        DELETE FROM guest WHERE id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>